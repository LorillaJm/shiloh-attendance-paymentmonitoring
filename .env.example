APP_NAME="Shiloh Attendance System"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_TIMEZONE=UTC
APP_URL=https://yourdomain.com

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
APP_MAINTENANCE_STORE=database

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

DB_CONNECTION=pgsql

# ============================================================================
# SUPABASE DATABASE CONFIGURATION
# ============================================================================
# 
# REGION RECOMMENDATION FOR PHILIPPINES:
# - Best: Singapore (ap-southeast-1) - 30-50ms latency
# - Current: Tokyo (ap-northeast-1) - 80-100ms latency
# - Alternative: Mumbai (ap-south-1) - 60-80ms latency
#
# To migrate: Create new project in Singapore region, migrate data
# ============================================================================

# DEVELOPMENT (Direct Connection - Port 5432)
# Use direct connection for local development and migrations
# DB_HOST=aws-1-ap-northeast-1.pooler.supabase.com
# DB_PORT=5432

# PRODUCTION (Transaction Pooler - Port 6543) - RECOMMENDED
# Use pooler for production to handle connection limits and reduce overhead
# Pooler benefits:
# - Handles 1000+ concurrent connections
# - Reduces connection handshake time
# - Better for serverless/high-traffic apps
DB_HOST=aws-1-ap-northeast-1.pooler.supabase.com
DB_PORT=6543

# SESSION POOLER (Port 5432 with .pooler subdomain)
# Use for long-running queries, migrations, or when you need prepared statements
# DB_HOST=aws-1-ap-northeast-1.pooler.supabase.com
# DB_PORT=5432

DB_DATABASE=postgres
DB_USERNAME=postgres.your-project-ref
DB_PASSWORD=your-secure-password

# SSL Configuration (REQUIRED for Supabase)
DB_SSLMODE=require

# Connection Settings
DB_TIMEOUT=5
DB_PERSISTENT=false

# Optional: Connection pooling settings
# DB_POOL_MIN=2
# DB_POOL_MAX=10

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null
SESSION_SECURE_COOKIE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# Attendance Settings
ATTENDANCE_EDIT_WINDOW_DAYS=7

# Real-time Polling Settings (in seconds)
# Note: Polling can be disabled when using WebSockets
REALTIME_POLLING_ENABLED=false
DASHBOARD_POLL_INTERVAL=15
DUE_PAYMENTS_POLL_INTERVAL=20
OVERDUE_PAYMENTS_POLL_INTERVAL=20
REPORTS_POLL_INTERVAL=30

# Broadcasting Configuration (WebSockets)
BROADCAST_CONNECTION=reverb

# Reverb Configuration (Laravel WebSocket Server)
REVERB_APP_ID=shiloh-app
REVERB_APP_KEY=
REVERB_APP_SECRET=
REVERB_HOST=localhost
REVERB_PORT=8080
REVERB_SCHEME=http

# Reverb Server Settings
REVERB_SERVER_HOST=0.0.0.0
REVERB_SERVER_PORT=8080

# Frontend Configuration (for Vite)
VITE_REVERB_APP_KEY="${REVERB_APP_KEY}"
VITE_REVERB_HOST="${REVERB_HOST}"
VITE_REVERB_PORT="${REVERB_PORT}"
VITE_REVERB_SCHEME="${REVERB_SCHEME}"
